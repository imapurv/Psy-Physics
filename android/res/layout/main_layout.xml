        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        ads:adUnitId="ca-app-pub-9940269263446164/7543900735"
        ads:adSize="BANNER" />

</FrameLayout>